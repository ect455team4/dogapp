<tr>
  <td class="feed_table">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %><br />
    <strong><%= feed_item.user.full_name %></strong><br>posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </td>
  <td class="feed_content">
    <p class="lead"><%= feed_item.content %></p>
  </td>
  <td class="feed_delete">
	<% if current_user?(feed_item.user) %>
	<%= link_to "Delete", feed_item, :method => :delete, :confirm => "Are you sure?", :title => feed_item.content, :class => "btn btn-danger" %>
	<% end %>
  </td>
</tr>
