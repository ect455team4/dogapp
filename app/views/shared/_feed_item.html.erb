<tr>
  <td class="feed_table">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %><br />
    <%= feed_item.user.first_name %> posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </td>
  <td class="feed_content">
    <%= feed_item.content %>
  </td>
  <td class="feed_delete">
	<% if current_user?(feed_item.user) %>
	<%= link_to "Delete", feed_item, :method => :delete, :confirm => "Are you sure?", :title => feed_item.content %>
	<% end %>
  </td>
</tr>
