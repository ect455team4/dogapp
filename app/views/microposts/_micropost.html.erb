<tr>
	<td class="profile_content">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.<br />
		<%= micropost.content %>
	</td>
	<td class="profile_content_delete">
	<% if current_user?(micropost.user) %>
	<td><%= link_to "Delete", micropost, :method => :delete, :confirm => "Are you sure?", :title => micropost.content %></td>
	<% end %>
	</td>
</tr>