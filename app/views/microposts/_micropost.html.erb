<tr>
	<td class="profile_content">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.<br />
		<p class="lead"><%= micropost.content %></p>
	</td>
	<% if current_user?(micropost.user) %>
	<td class="profile_content_delete">
	<%= link_to "Delete", micropost, :method => :delete, :confirm => "Are you sure?", :title => micropost.content, :class => "btn btn-danger" %>
	</td>
	<% end %>
</tr>